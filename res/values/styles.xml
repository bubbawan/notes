<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditText_Cursor</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_note_actionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Note_actionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Note_actionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Note_actionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Note_actionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Note_actionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_note_actionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_note_actionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Note_actionbar</item>
    </style>

    <style name="ActionBar.Solid.Note_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_note_actionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_note_actionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_note_actionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Note_actionbar</item>
        <item name="android:titleTextStyle">@style/ActionBar_TitleColor</item>
    </style>

    <style name="ActionBar.Transparent.Note_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_note_actionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Note_actionbar</item>
    </style>

    <style name="PopupMenu.Note_actionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_note_actionbar</item>
    </style>

    <style name="DropDownListView.Note_actionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_note_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Note_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_note_actionbar</item>
    </style>

    <style name="DropDownNav.Note_actionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_note_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_note_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_note_actionbar</item>
    </style>

    <style name="ProgressBar.Note_actionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_note_actionbar</item>
    </style>

    <style name="ActionButton.CloseMode.Note_actionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_note_actionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Note_actionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Note_actionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Note_actionbar</item>
    </style>

    <style name="Actionbar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/header</item>
        <item name="android:titleTextStyle">@style/ActionBar_TitleColor</item>
    </style>

    <style name="ActionBar_TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_title_text_color</item>
    </style>

    <style name="EditText_Cursor" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textCursorDrawable">@drawable/theme_cursor_drawable</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>

</resources>