<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/note_list_row_height"
    android:background="@color/list_row_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/note_row_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/note_list_row_height"
        android:layout_weight="1"
        android:background="@color/list_row_background"
        android:paddingLeft="@dimen/note_list_row_left_padding"
        android:text="Medium Text"
        android:textColor="@color/list_row_text"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <Button
        android:id="@+id/note_row_delete"
        android:layout_width="14dp"
        android:layout_height="10dp"
        android:background="@drawable/delete_note"
        android:paddingLeft="@dimen/note_list_row_left_padding"
        android:gravity="center_vertical" />

    <Space
        android:layout_width="5dp"
        android:layout_height="@dimen/note_list_row_height"
        android:background="@color/list_row_background"
        android:paddingLeft="@dimen/note_list_row_left_padding"
        android:layout_gravity="center" />

</LinearLayout>